{
  "openapi": "3.1.0",
  "info": {
    "title": "Glitch Hunt Ingestion API",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/ingest/request": {
      "post": {
        "tags": [
          "Ingest"
        ],
        "summary": "Ingest Request",
        "operationId": "ingest_request_v1_ingest_request_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IngestRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IngestResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/ingest/confirm": {
      "post": {
        "tags": [
          "Ingest"
        ],
        "summary": "Ingest Confirm",
        "operationId": "ingest_confirm_v1_ingest_confirm_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfirmRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/pairing/request": {
      "post": {
        "tags": [
          "Pairing"
        ],
        "summary": "Request Pairing Code",
        "operationId": "request_pairing_code_v1_pairing_request_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PairingRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PairingResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/pairing/status": {
      "get": {
        "tags": [
          "Pairing"
        ],
        "summary": "Check Pairing Status",
        "operationId": "check_pairing_status_v1_pairing_status_get",
        "parameters": [
          {
            "name": "device_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Device Id"
            }
          },
          {
            "name": "code",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Code"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PairingStatusResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "tags": [
          "Monitoring"
        ],
        "summary": "Metrics",
        "operationId": "metrics_metrics_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "Monitoring"
        ],
        "summary": "Health Check",
        "operationId": "health_check_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Monitoring"
        ],
        "summary": "Root Health Check",
        "description": "Legacy root health check for convenience.",
        "operationId": "root_health_check__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ConfirmRequest": {
        "properties": {
          "handshake_id": {
            "type": "string",
            "format": "uuid",
            "title": "Handshake Id"
          },
          "status": {
            "$ref": "#/components/schemas/IngestStatus"
          },
          "error_message": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Error Message"
          }
        },
        "type": "object",
        "required": [
          "handshake_id",
          "status"
        ],
        "title": "ConfirmRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "IngestRequest": {
        "properties": {
          "device_id": {
            "type": "string",
            "title": "Device Id"
          },
          "filename": {
            "type": "string",
            "title": "Filename"
          },
          "file_size_bytes": {
            "type": "integer",
            "title": "File Size Bytes"
          },
          "sha256_checksum": {
            "type": "string",
            "maxLength": 64,
            "minLength": 64,
            "title": "Sha256 Checksum"
          },
          "file_path_context": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "File Path Context",
            "default": []
          },
          "device_context": {
            "additionalProperties": true,
            "type": "object",
            "title": "Device Context",
            "default": {}
          },
          "metadata": {
            "additionalProperties": {
              "type": "string"
            },
            "type": "object",
            "title": "Metadata",
            "default": {}
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "title": "Timestamp"
          }
        },
        "type": "object",
        "required": [
          "device_id",
          "filename",
          "file_size_bytes",
          "sha256_checksum",
          "timestamp"
        ],
        "title": "IngestRequest"
      },
      "IngestResponse": {
        "properties": {
          "handshake_id": {
            "type": "string",
            "format": "uuid",
            "title": "Handshake Id"
          },
          "upload_url": {
            "type": "string",
            "title": "Upload Url"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time",
            "title": "Expires At"
          }
        },
        "type": "object",
        "required": [
          "handshake_id",
          "upload_url",
          "expires_at"
        ],
        "title": "IngestResponse"
      },
      "IngestStatus": {
        "type": "string",
        "enum": [
          "SUCCESS",
          "FAILED"
        ],
        "title": "IngestStatus"
      },
      "PairingRequest": {
        "properties": {
          "device_id": {
            "type": "string",
            "title": "Device Id"
          }
        },
        "type": "object",
        "required": [
          "device_id"
        ],
        "title": "PairingRequest"
      },
      "PairingResponse": {
        "properties": {
          "code": {
            "type": "string",
            "title": "Code"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time",
            "title": "Expires At"
          }
        },
        "type": "object",
        "required": [
          "code",
          "expires_at"
        ],
        "title": "PairingResponse"
      },
      "PairingStatus": {
        "type": "string",
        "enum": [
          "WAITING",
          "CLAIMED",
          "EXPIRED"
        ],
        "title": "PairingStatus"
      },
      "PairingStatusResponse": {
        "properties": {
          "status": {
            "$ref": "#/components/schemas/PairingStatus"
          },
          "apikey": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Apikey"
          }
        },
        "type": "object",
        "required": [
          "status"
        ],
        "title": "PairingStatusResponse"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}